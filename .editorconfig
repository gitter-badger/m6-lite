# 定义编码样式的文件格式

# 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# 匹配全部文件
[*]
# 设置字符集
charset = utf-8
# 结尾换行符，可选"lf"、"cr"、"crlf"
end_of_line = lf
# 在文件结尾插入新行
insert_final_newline = false
# 缩进风格，可选"space"、"tab"
indent_style = space
# 缩进的空格数
indent_size = 2

[*.{json,xml,html,eslintrc,babelrc}]
indent_style = space
indent_size = 2

[*.{js,jsx,ejs}]
indent_style = space
indent_size = 2

[*.{css,less,sass}]
indent_style = space
indent_size = 2
